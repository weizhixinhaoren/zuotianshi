.banner,.banner>image{
  width: 100%;
  height: 280rpx;
}
.form-box{
  margin:20rpx  32rpx 0 32rpx;

}
.fir-name{
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1px solid #ebebeb;
}
.fir-name view:nth-child(1){
  width: 400rpx;
  display: flex;
  align-items: center;
}
.fir-name view:nth-child(2){
  width: 250rpx;
  font-size: 26rpx;
  color: #9b9b9b;
}
.tip{
  width: 20rpx !important;
  color: #ff0000;
  font-weight: bold;
  font-size: 24rpx;

}
.name{
  font-size:26rpx;
  color: #1c1c1c !important;
}
.city{
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1px solid #ebebeb;
}
.city>view:nth-child(1){
  display: flex;
}
.city>view:nth-child(2) view{
  font-size: 26rpx;
  color: #9b9b9b;
  display: inline-block;
}
.city>view:nth-child(2) image{
  width: 50rpx;
  height: 55rpx;
  vertical-align: middle;
}
.beizhu{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #1c1c1c;
  border-bottom:1px solid #ebebeb;
}
.beizhu textarea{
  padding-top: 20rpx;
}

.submit{
  margin-top: 150rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 460rpx;
  border-radius: 100rpx;
  background-color: #eeeef0;
  color: #aeaeae;

}
.submit1{
  margin-top: 150rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 460rpx;
  border-radius: 100rpx;
  background-color: #e60012;
  color: white;

}
button::after{ border: none; }

picker-view {
  background-color: white;
  padding: 0;
  width: 100%;
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

picker-view-column view {
  vertical-align: middle;
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ----------------------------------------- */

.animation-element-wrapper {
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}

.animation-button {
  margin-top: 20rpx;
  top: 20rpx;
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
}

text {
  color: #999;
  display: inline-flex;
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.left-bt {
  left: 30rpx;
}

.right-bt {
  right: 30rpx;
}

.line {
  display: block;
  position: fixed;
  height: 1rpx;
  width: 100%;
  margin-top: 89rpx;
  background-color: #eee;
}

.weui-btn {
  width: 500rpx;
  margin: auto;
  background-color: #e60012;
  border-radius: 60rpx;
  color: white;
  font-size: 32rpx;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  margin-left: -250rpx;
}

.imgupf {
  display: inline-block;
}