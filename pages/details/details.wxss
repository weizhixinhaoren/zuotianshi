.videoBox{
  position: relative;
  top: 0px;
  left: 0px;
  width: 100%;
}
.videoBox video{
  width: 100%;
  height: 400rpx;
}
.title{
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tab-jj{
  font-size: 26rpx;
  color: #9d9d9d;
}
.tit{
  font-size: 28rpx;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-overflow: ellipsis; 
  overflow: hidden; 
  white-space: nowrap;
}
.tab-jj image{
  width:30rpx;
  height: 30rpx; 
  vertical-align: middle;
}
.content-box {
  padding: 0 32rpx;
  padding-bottom: 40rpx;
}
.time{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #aeaeae;
  vertical-align: middle;
}
.time image{
  width:30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.j-con{
  font-size: 26rpx;
  color:#a1a1a1;
  line-height: 52rpx;
}
.hi-hidden{
  display: none;
}
.sh-show{
  display: block
}
.jh{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.jh view{
  text-align: center;
  font-size: 20rpx;
  color: #9d9d9d;
}
.jh view image{
  width: 40rpx;
  height: 40rpx;
  margin:auto;
  margin-bottom: 10rpx;
  display: block;
}
.comment{
  padding: 20rpx 32rpx;
  border-top: 20rpx solid #f8f8f8;
}
.commentBox,.commentInp{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.commentImg image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.commentInp input{
  width: 550rpx;
  font-size: 24rpx;
  color: #737373;
  height: 66rpx;
  background-color: #f8f8f8;
  border-radius: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

button::after{ border: none; }
.last-d{
  width: 100%;
  height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #8f8f8f;
}
.info-img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.name_info {
  display: inline-block;
  height: 100rpx;
  vertical-align: top;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.name_info text {
  display: block;
}

.name_info text:nth-child(1) {
  font-size: 32rpx;
  color: #3a5182;
}

.name_info text:nth-child(2) {
  font-size: 20rpx;
  color: #a9a9a9;
}
.comment{
  border-bottom: 1px solid #eaeaea;
}
.commentList{
  padding: 20rpx 32rpx;
  
}
.commentCon{
  margin-left: 120rpx;
  font-size: 26rpx;
  color: #121212;
  line-height: 40rpx;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eaeaea;
}
.last-d{
  height: 80rpx;
  line-height: 80rpx;
}