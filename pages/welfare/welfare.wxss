@import "../../weui.wxss";
.fuli-box {
  margin: 0 56rpx;
  padding-bottom: 20rpx;
  border-radius: 18rpx;
  overflow: hidden;
  box-shadow: 0rpx 4rpx 4px #efefef;
  margin-bottom: 24rpx;
}

.fuli-box image {
  width: 100%;
  height: 260rpx;
}

.fuli-box view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fuli-box view view:nth-child(1) {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #1c1c1c;
  width: 420rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.fuli-box view view:nth-child(2) {
  margin-right: 20rpx;
  /* width: 240rpx; */
  height: 50rpx;
  font-size: 22rpx;
  color: #fff;
  padding: 0 20rpx;
  background-color: #d61d1b;
  border-radius: 30rpx;
  justify-content: center;
}
