/* pages/my/my.wxss */
.set-background{
  height: 280rpx;
  position: relative;
}
.background-image{
  width: 100%;
  height: 100%;
}
.name-info{
  position: absolute;
  top: 40%;
  margin-top: -70rpx;
  left: 50%;
  margin-left: -70rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  box-shadow: 0 2rpx 6rpx #bababa;
}
.name-info image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
}
.info-name{
  font-size: 30rpx;
  color: #1d1d1d;
  text-align: center;
  margin-top: 10rpx;
}
.dongtai-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  

}
.dongtai-box>view{
  flex:1;
  text-align: center;
  padding: 20rpx 0; 
}
.dongtai-box>view view:nth-child(1){
  font-size: 32rpx;
  color: #1d1d1d;
  margin-bottom: 10rpx;
}
.dongtai-box>view view:nth-child(2){
  font-size: 22rpx;
  color: #acacac;
}
.my-zh{
  border-bottom: 22rpx solid #f8f8f8;
  border-top:22rpx solid #f8f8f8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  height: 92rpx;
}
.all-box{
   display: flex;
  justify-content: space-between;
  align-items: center;
   padding: 0 32rpx;
  height: 92rpx;
}
.icon-my{
  width: 40rpx;
  height: 40rpx;
  vertical-align:top;

}
.my-text{
  font-size: 30rpx;
  color: #1d1d1d;
  margin-left: 10rpx;
}
.right-jt{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.my-zh view:nth-child(1){
  display: flex;
  width: 220rpx;
}

.all-box view:nth-child(1){
  display: flex;
}
.all-box{
  border-bottom: 1px solid #f8f8f8;
}
.box-all-zu{
   border-bottom: 22rpx solid #f8f8f8;
}



.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

.btn-xx{
  font-size: 20rpx;
  width:140rpx;
  height:140rpx;
  border-radius:140rpx;

}
