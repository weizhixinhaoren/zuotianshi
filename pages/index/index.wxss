.boxSearch {
  background-color: white;
}
.indexSearch {
  width: 80%;
  margin: auto;
  border-radius: 48rpx;
  padding-left: 40rpx;
  font-size: 28rpx;
  height: 60rpx;
  background-color: #f7f7fa;
}

.boxBanner {
  width: 100%;
  background-color: #fff;
  padding: 10rpx 0;
}

.banner {
  width: 100%;
  height: 100%;
  display: block;
}

.navListAll {
  background-color: #fff;
  padding-top: 40rpx;
  border-bottom: 20rpx solid #f8f8f8;
  display: flex;
  justify-content: space-around;
  flex: 1;
  flex-wrap: wrap;
}

.navListAll .boxnav {
  width: 25%;
  text-align: center;
}

.navListAll .boxnav:nth-child(1), .navListAll .boxnav:nth-child(2),
.navListAll .boxnav:nth-child(3), .navListAll .boxnav:nth-child(4) {
  margin-bottom: 40rpx;
}

.boxnav image {
  text-align: center;
  width: 60rpx;
  height: 60rpx;
  margin: auto;
  display: block;
}

.navTitle {
  font-size: 28rpx;
  color: #101010;
  height: 64rpx;
  line-height: 64rpx;
}

.recent {
  background-color: #fff;
  padding: 40rpx 30rpx;
  border-bottom: 20rpx solid #f8f8f8;
}

.recentList {
  display: inline-block;
  width: 200rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recentList image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin: auto;
  display: block;
}

.recentList .view_list {
  width: 100%;
  font-size: 32rpx;
  color: #242424;
  display: inline-block;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.boxSbll {
  display: flex;
  flex: 1;
  width: 100%;
  white-space: nowrap;
}

/* 去掉滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recentMUkuai {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  flex: 1;
  font-size: 32rpx;
}

.recentMUkuai>view image {
  width: 8rpx;
  height: 36rpx;
  vertical-align: middle;
}

.recentMUkuai>view:last-child {
  font-size: 32rpx;
  color: #e60012;
}

.popular {
  background-color: #fff;
  padding: 40rpx 30rpx;
  border-bottom: 20rpx solid #f8f8f8;
}

.hotTuijian {
  display: flex;
  flex: 1;
  width: 100%;
  white-space: nowrap;
}

.hotBoxlist {
  width: 400rpx;
}

.hot_video {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

.hotBoxlist_videolist view:first-child {
  font-size: 32rpx;
  color: #101010;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
}

.hotBoxlist_videolist view:last-child {
  font-size: 28rpx;
  color: #ababab;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
}

.hotBoxlist {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.video_jingxuan {
  background-color: #fff;
  padding: 40rpx 0rpx 0 0;
}

.video_jingxuan .recentMUkuai {
  padding: 0 30rpx;
  margin-bottom: 0px;
  padding-bottom: 40rpx;
}

.jxshipin {
  width: 100%;
  position: relative;
}

.jxshipin image {
  display: block;
  width: 100%;
}

.bfan {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -45rpx;
  margin-left: -45rpx;
}

.bfan image {
  width: 90rpx;
  height: 90rpx;
}

.jingxuanTit {
  font-size: 36rpx;
  color: #000;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.faburen {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
}

.fabuimg {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 48%;
  overflow: hidden;
}

.fabuimg image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.fbid {
  font-size: 26rpx;
}

.fbid, .fbsj {
  display: block;
  font-size: 24rpx;
  color: #000;
}

.fbsj {
  color: #9d9d9d;
}

.fbinfo {
  float: left;
  width: 250rpx;
  margin-left: 10rpx;
}

.gongnengZan {
  width: 50%;
  display: inline-block;
  margin-top: 20rpx;
  vertical-align: top;
}

.gongnengZan image {
  width: 40rpx;
  height: 40rpx;
  margin: auto;
  display: block;
}

.gongnengZan>view {
  text-align: center;
  width: 25%;
  font-size: 24rpx;
  color: #9d9d9d;
  display: inline-block;
}

.gongnengZan>view>view {
  height: 36rpx;
  line-height: 36rpx;
}

.jingxuanspBox {
  border-bottom: 20rpx solid #f8f8f8;
  padding-bottom: 20rpx;
  background-color: #fff;
}
