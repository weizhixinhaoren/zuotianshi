.topBanner{
  width: 100%;
}
.topBanner image{
   width: 100%;
   height: 280rpx;
   display: block;
}
.piaoBox{
  padding: 40rpx 32rpx;
  font-size: 30rpx;
  border-bottom: 15rpx solid #edeaea;
}
.piaoBox .sec_b{
  font-size: 24rpx;
  color: #d0c9c9;
}
.boxTo{
  margin:20rpx 32rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
}
.boxTo>view{
  width: 48%;
  margin-top: 20rpx;
  border:1px solid #ccc;
  box-shadow: 0 1px 1px #ccc;
}
.boxTo>view:nth-child(1),.boxTo>view:nth-child(2){
   margin-top: 0rpx;
}
.boxTo>view view{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: center;
}
.boxTo>view>view{
  margin-top: 10rpx;
}
.boxTo>view view.tpBtn{
  width: 50%;
  margin: auto;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 22rpx;
  background-color: #d71627;
  color: white;
  margin-bottom: 20rpx;
}
.boxTo view image{
  width: 100%;
  height: 280rpx;
  display: block;
}
.boxTo>view view.sum{
 margin-bottom: 20rpx;
}