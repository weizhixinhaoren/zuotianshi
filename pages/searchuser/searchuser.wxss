/* pages/search/search.wxss */
@import "../../weui.wxss";

.weui-search-bar {
  background-color: white;
  border-top: none;
  border-bottom: none;
}

.historyS {
  padding: 0 40rpx;
  font-size: 32rpx;
  display: flex;
  flex: 1;
  justify-content: space-between;
}

.delimg {
  width: 40rpx;
  height: 40rpx;
}

.htrItemContent {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #ccc;
}

.htrItem {
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1px solid #ccc;
  padding: 0 20rpx;
  border-radius: 40rpx;
  margin: 0 20rpx;
  margin-bottom: 20rpx;
}

.searchBtn {
  background-color: rgba(0, 0, 0, 0);
  border: rgba(0, 0, 0, 0);
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
button::after{
  border:none
}
.searchCon{
  border:1px solid red;
  margin: 0 32rpx;
}
.gjuser{
  border-bottom:1px solid #ccc;
  padding: 20rpx 0rpx;
  margin: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.gjuser image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.gjuser view.nameUser{
  width: 350rpx;
}
.gjuser view.namegz{
 font-size: 28rpx;
 border:1px solid #ccc;
 padding:10rpx 40rpx;
 border-radius: 12rpx;
}